		<div class="content">
			<div class="container-fluid">
				<div class="header" id="patient-header">
					<h2>Current Patients</h2>
		    	</div><!-- / #patient-header -->

				<div class="col-md-3">
					<div class="panel panel-primary">
						<div class="panel-heading">
					        <h3 class="panel-title">Add Patient</h3>
						</div><!-- / .panel-heading -->
		      			<div class="panel-body">
							<form method="POST" action="/api/patient/"> 
                         	<div class="form-group">
									<label for="first">Patient's First Name</label>
									<input type="text" name="first" id="first" class="form-control" placeholder="First name up to 35 letters." pattern="[A-Za-z]{3,35}" required="true">
		            			</div> <!-- / .form-group -->

		            			<div class="form-group">
									<label for="last">Patient's Last Name</label>
									<input type="text" name="last"  id="last" class="form-control" placeholder="Last name up to 35 letters." pattern="[A-Za-z]{3,35}" required="true">
		            			</div> <!-- / .form-group -->
		            			{{!-- <div class="form-group">
									<label for="select-gender">Gender</label>
									<select id="select-gender" class="form-control" name="gender" required>
										<option value="" selected disabled>Gender</option>
										<option value="F">Female</option>
										<option value="N">Non-Binary</option>
										<option value="M">Male</option>
									</select>
		            			</div> <!-- / .form-group --> --}}
		            			{{!-- <div class="form-group">
									<label for="select-condition">Condition</label>
									<select id="select-condition" class="form-control" name="condition" required>
										<option value="" selected disabled>Condition</option>
										<option value="1">Critical</option>
										<option value="2">Serious</option>
										<option value="3">Good</option>
									</select>
		            			</div> <!-- / .form-group --> --}}
								<button type="submit" id="add-patient-btn" class="btn btn-primary">Submit</button>
							</form>
						</div><!-- / .panel-body -->
					</div> <!-- / .panel -->
				</div> <!-- / .col-md-3 -->

				<div class="col-md-9">
		    		<div class="panel panel-primary">
		    			<div class="panel-heading">
		        			<h3 class="panel-title">Current Patient List</h3>
		      			</div> <!-- / .panel-heading -->
		      			<div class="panel-body">
                    <table class="table table-hover table-responsive" id='patient-table'>
                        <thead>  
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Admitted Date</th>
                            </tr>
                        </thead>
                        <tbody>
                           {{#each patient_db}}
                         <tr> 
                             <td><h5>{{first}}</h5></td>    
                             <td><h5>{{last}}</h5></td>
                              {{!-- <td> {{gender}} </td>
                              <td> {{condition}} </td> --}}
                             <td><h5>{{admitted}}</h5></td>
                         </tr>
                           {{/each}}
                        </tbody>
                    </table>
                    <!-- / #patient-table -->
               </div><!-- /.panel-body -->
